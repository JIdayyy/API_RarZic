datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  firstName String?
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
  createdAt DateTime @default(now())
}

model Song {
  album      Album     @relation(fields: [albumId], references: [id])
  albumId    String
  artist     Artist    @relation(fields: [artistId], references: [id])
  artistId   String
  createdAt  DateTime  @default(now())
  duration   String
  id         String    @id @default(cuid())
  playlist   Playlist? @relation(fields: [playlistId], references: [id])
  playlistId String?
  s3Link     String
  title      String
  updatedAt  DateTime  @updatedAt
}

model Album {
  artist    Artist   @relation(fields: [artistId], references: [id])
  artistId  String
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  picture   String
  songs     Song[]
  title     String
  updatedAt DateTime @updatedAt
}

model Artist {
  albums    Album[]
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String
  picture   String
  songs     Song[]
  updatedAt DateTime @updatedAt
}

model Playlist {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  songs       Song[]
  title       String
  updatedAt   DateTime @updatedAt
}